<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp">
    <com.example.administrator.boxsocialmvp.Objects.RoundedImage
        android:id="@+id/profile_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/ic_perm_contact_cal_grey600_18dp"/>

    <TextView
        android:id="@+id/twitter_handle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/profile_image"
        android:layout_toRightOf="@+id/profile_image"
        android:text="Twitter - ..."
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:textColor="#000000"
        />
    <TextView
        android:id="@+id/twitter_timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/profile_image"
        android:layout_below="@+id/tweet_text"
        android:text="a while ago..."
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:textColor="#000000"
        />

    <TextView
        android:id="@+id/tweet_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/twitter_handle"
        android:text="...Loading tweet"
        android:layout_toRightOf="@+id/profile_image"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        />
    <ImageView
        android:id="@+id/media_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/twitter_timestamp"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        />

</RelativeLayout>